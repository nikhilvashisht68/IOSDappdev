<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sfpro"
        android:text="UserName"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="131dp"
        android:layout_height="94dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/newuser" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sfpro"
        android:hint="//@userid"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/sfpro"
        android:text="Bio"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="403dp"
        android:layout_height="478dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="232dp"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/sfpro"
            android:text="Recent pictures"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/recent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/recent3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro"
                android:onClick="personal"
                android:paddingLeft="4dp"
                android:paddingTop="14dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:text="Personal"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/personalnext"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:onClick="personal"
                android:padding="22dp"
                app:srcCompat="@drawable/next2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro"
                android:onClick="friends"
                android:paddingLeft="4dp"
                android:paddingTop="14dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:text="Friends (156)"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/friendsnext"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:onClick="friends"
                android:padding="22dp"
                app:srcCompat="@drawable/next2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro"
                android:onClick="groups"
                android:paddingLeft="4dp"
                android:paddingTop="14dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:text="Groups (13)"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/groupsnext"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:onClick="groups"
                android:padding="22dp"
                app:srcCompat="@drawable/next2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:onClick="github"
                android:padding="1dp"
                app:srcCompat="@drawable/githube" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:onClick="linkedin"
                android:padding="35dp"
                app:srcCompat="@drawable/linkedine" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:onClick="spotify"
                android:padding="5dp"
                app:srcCompat="@drawable/spotifye" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width= "match_parent"
        android:id="@+id/fragment_container_view_tag">
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>